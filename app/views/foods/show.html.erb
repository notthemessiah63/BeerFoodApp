<h2 class='page_hdr'>Food pairings - <%= @food.name %></h2>
<container class='siz30l'>
  <div>
    <p><%= @food.name %></p>
    <p><%= @food.style_note %></p>
  </div>
</container>
<container class='siz60r'>
  <ul class="ul_list">
    <li><%= link_to 'Make a match', new_match_path, :class => 'link_line' %></l1>
    <li><%= link_to 'Add your beer', new_beer_path, :class => 'link_line' %></l1>
  </ul>
  <p>Beer pairings shown below for your chosen meal..</p>
  <div>
    <% @food.beers.each do |beer| %>
      <div class="list-group-item">
        <ul class="ul_list">
          <li><%= link_to(beer.name, beer_path(beer.id), :class => 'link_line')%></li>
          <% beer.matches.each do |match| %>
            <% if match.food_id == @food.id %>
              <p><%= match.match_note %></p>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</container>




