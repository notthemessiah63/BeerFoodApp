<h3>Food - Show Page</h3>
<container class='siz40'>
  <div>
    <p><%= @food.name %></p>
    <p><%= @food.style_note %></p>
  </div>
</container>
<container class='siz40'>
  <div>
    <% @food.beers.each do |beer| %>
      <div class="list-group-item">
        <ul class="food">
          <li><%= link_to(beer.name, beer_path(beer.id))%></li>
          <% beer.matches.each do |match| %>
            <p><%= match.match_note %></p>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</container>




